{
  "name": "node-db3-challenge",
  "version": "1.0.0",
  "description": "Challenge for Node DB3 Module",
  "keywords": [],
  "homepage": "https://github.com/LambdaSchool/node-db3-challenge#readme",
  "bugs": {
    "url": "https://github.com/LambdaSchool/node-db3-challenge/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LambdaSchool/node-db3-challenge.git"
  },
  "author": "Lambda School",
  "main": "./build/index.js",
  "scripts": {
    "check-format": "yarn run prettier --ignore-path .gitignore --list-different",
    "check-types": "tsc --watch",
    "format": "yarn run prettier --ignore-path .gitignore --write",
    "lint": "eslint --ext .ts .",
    "migrate: rollback": "npx knex migrate:rollback",
    "migrate:latest": "npx knex migrate:latest",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(json|js|ts)\"",
    "seed:run": "npx knex seed:run",
    "server": "tsc && nodemon ./build/index.js",
    "validate": "npm-run-all --parallel check-format lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|ts)": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "folktale": "^2.3.2",
    "knex": "^0.20.8",
    "knex-cleaner": "^1.3.0",
    "morgan": "^1.9.1",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.1.7",
    "@types/swagger-ui-express": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-optimize-regex": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "sort-package-json": "^1.39.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.4"
  }
}
